{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <div class="container-fluid container-md p-5 card shadow">
        <div class="d-flex justify-content-center">
            <h1>Participant</h1>
        </div>

        <table class="table border border-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ participant.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Administrateur</th>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ participant.image }}</td>
            </tr>
        </tbody>
    </table>
        <div class="d-flex justify-content-center">
            <a href="{{ path('app_participant_index') }}"><button class="btn btn-primary">back to list</button></a>
        </div>
        <div class="d-flex justify-content-center">
            <a href="{{ path('app_participant_edit', {'id': participant.id}) }}"><button class="btn btn-warning">edit</button></a>
        </div>
            {{ include('participant/_delete_form.html.twig') }}

</div>

{% endblock %}
