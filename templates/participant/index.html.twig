{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
<div class="container-fluid container-md p-5 card shadow mt-5">
    <div class="d-flex justify-content-center">
        <h1>Participant</h1>
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>

                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>

                <td>{{ participant.email }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.image }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}" class="btn btn-primary btn-sm">Profil</a>
                    {% if app.user is defined and app.user.id == participant.id %}
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-warning btn-sm mt-2">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center mt-3">
        <a href="{{ path('sortir_register') }}"><button class="btn btn-success">Cr√©er un compte</button></a>
    </button>
    </div>

</div>
{% endblock %}
