{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
<div class="container-fluid container-xlg p-5 card shadow">
    <div class="d-flex justify-content-center">
        <h1>Participant</h1>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Administrateur</th>
                <th>Actif</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.password }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>{{ participant.image }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
    <button class="btn btn-secondary">
        <a href="{{ path('sortir_register') }}" class="text-black text-decoration-none">Create new</a>
    </button>
    </div>

</div>
{% endblock %}
